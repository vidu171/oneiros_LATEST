<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/recycler_event"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff5065a1"
        android:orientation="vertical">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="140dip">


            <ImageView
                android:focusable="true"
                android:id="@+id/focus"
                android:layout_alignParentEnd="true"
                android:layout_width="140dip"
                android:layout_height="140dip"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                android:alpha="0.3"
                android:src="@drawable/r_event" />

        </RelativeLayout>




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:alpha="0.6"
                    android:fontFamily="sans-serif-light"
                    android:text="Registered events overview"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/rEventList"
            android:layout_width="fill_parent"
            android:layout_height="245dip"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#ffffff"
            android:divider="@android:color/transparent"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp" />


        <RelativeLayout
            android:layout_marginTop="-20dip"
            android:layout_marginBottom="-5dip"
            android:id="@+id/hide"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:alpha="0.7"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dip"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:text="Registered Events:"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginEnd="41dip"
                android:textSize="41sp"
                android:id="@+id/count"
                android:text="55"
                android:textColor="#ff5065a1"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    <LinearLayout
        android:animateLayoutChanges="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="-7dip"
            android:paddingEnd="15dip"
            android:paddingStart="10dip"
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_down"/>
    </LinearLayout>

</LinearLayout>
