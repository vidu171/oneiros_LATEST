<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="11dp"
        app:cardElevation="20dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.3">



                <ImageView
                    android:id="@+id/back_image"
                    android:scaleType="center"
                    android:src="@drawable/nibble_nibble"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dip"
                    />

                <View
                    android:layout_marginBottom="40dip"
                    android:background="@drawable/gradient_of_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="130dip"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="3dip"
                    android:src="@drawable/aashis"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_height="130dip" />
            </FrameLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/name"
                    android:textColor="#484848"
                    android:layout_marginTop="9dip"
                    android:textStyle="bold"
                    android:text="Aashis Kumar"
                    android:textSize="25sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/desc"
                    android:textColor="#484848"
                    android:text="Core Committee"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_marginStart="24dip"
                    android:layout_marginEnd="24dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/description"
                    android:textColor="#afafaf"
                    android:textStyle="normal"
                    android:layout_marginEnd="15dip"
                    android:layout_marginStart="15dip"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="@string/aashis_desc"
                    android:layout_marginTop="12dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>






        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>