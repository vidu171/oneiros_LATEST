<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/hidden"
            android:layout_width="match_parent"
            android:background="#4c586f"
            android:visibility="invisible"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="SuccessFull"/>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/notHidden"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/image_container"
                android:background="@color/One">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:src="@drawable/nav_logo"/>
            </FrameLayout>
            <TextView
                android:layout_below="@id/image_container"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/One"
                android:textSize="18dp"
                android:id="@+id/event_name"
                android:text="Sleeping Contest"/>
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#FFFFFF"
                android:id="@+id/card"
                android:layout_below="@id/event_name"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/bar"
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:background="@color/One"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Candidate"
                            android:layout_margin="10dp"
                            android:textColor="@android:color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="180dp"
                            android:text="Fees"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/details"
                        android:layout_below="@id/bar"
                        android:layout_width="220dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/Name"
                            android:textColor="@android:color/black"
                            android:text="Vidhyanshu Kumar Jain Jain"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/RegNum"
                            android:text="169105214"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Contact"
                            android:text="7869530027"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:id="@+id/University"
                            android:layout_height="wrap_content"
                            android:text="Manipal University Jaipur"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginLeft="51dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:id="@+id/Totalfees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250 Rs."
                        android:layout_toRightOf="@id/details"
                        android:layout_below="@id/bar"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                android:id="@+id/team_members"
                android:layout_below="@id/card">
            </android.support.v7.widget.RecyclerView>
            <Button
                android:background="@drawable/button_register"
                android:padding="10dp"
                android:textColor="@color/One"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_members"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/register"
                android:text="Register"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register For SomeOne Else"
                android:layout_below="@id/register"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/add"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>