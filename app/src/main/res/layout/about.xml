<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#fee1a5"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="140dip"
            android:layout_height="140dip"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:alpha="0.4"
            android:src="@drawable/details" />
    </RelativeLayout>






    <LinearLayout android:orientation="vertical" android:background="#ffffff" android:padding="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="-4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="10dip"
                android:alpha="0.75"
                android:src="@drawable/ic_person_black_24dp"
                android:tint="#ff999999" />

            <TextView
                android:id="@+id/uName"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:editable="false"
                android:fontFamily="sans-serif-light"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingRight="40dp"
                android:paddingTop="9dip"
                android:text="User Full Name"
                android:textColor="#ff999999"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="10dip"
                android:alpha="0.75"
                android:src="@drawable/ic_email"
                android:tint="#ff999999" />

            <TextView
                android:id="@+id/uEmail"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="40dp"
                android:paddingTop="9dip"
                android:text="User Email ID"
                android:textColor="#ff999999"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="10dip"
                android:alpha="0.75"
                android:src="@drawable/ic_info"
                android:tint="#ff999999" />

            <TextView
                android:id="@+id/uReg"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="40dp"
                android:paddingTop="9dip"
                android:text="User RegNo."
                android:textColor="#ff999999"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-15dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="10dip"
                android:alpha="0.75"
                android:src="@drawable/ic_home"
                android:tint="#ff999999" />

            <TextView
                android:id="@+id/uUni"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="40dp"
                android:paddingTop="9dip"
                android:text="User University"
                android:textColor="#ff999999"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="10dip"
                android:alpha="0.75"
                android:src="@drawable/ic_description"
                android:tint="#ff999999" />

            <TextView
                android:id="@+id/uID"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="40dp"
                android:paddingTop="9dip"
                android:text="User ID"
                android:textColor="#ff999999"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>