<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="0dp"
    sothree:umanoParallaxOffset="50dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/Nav"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cini"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dip"
                        android:layout_height="110dip"
                        android:layout_marginTop="4dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_cini" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:text="CINEFELIA"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />


                </LinearLayout>

                <View
                    android:alpha="0.1"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#646464" />


                <LinearLayout
                    android:id="@+id/shabd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dip"
                        android:layout_height="110dip"
                        android:layout_marginTop="4dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_shabd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:text="SHABD"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:alpha="0.1"
                android:background="#646464" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/Litmus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:layout_marginTop="4dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_litmus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:paddingTop="2dip"
                        android:text="LITMUS"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>


                <View
                    android:alpha="0.1"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#646464" />


                <LinearLayout
                    android:id="@+id/TMC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dip"
                        android:layout_height="100dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_tmc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:text="TMC"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:alpha="0.1"
                android:background="#646464" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/scribbles"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dip"
                        android:layout_height="95dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_scribb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:text="SCRIBBLES"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>


                <View
                    android:alpha="0.1"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#646464" />

                <LinearLayout
                    android:id="@+id/SOPHIA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="95dip"
                        android:layout_height="95dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_sophia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:text="SOPHIA"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:alpha="0.1"
                android:background="#646464" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/Aperture"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="95dip"
                        android:layout_height="95dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_aper" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:text="APERTURE"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>


                <View
                    android:alpha="0.1"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#646464" />


                <LinearLayout
                    android:id="@+id/coreoe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="90dip"
                        android:layout_height="90dip"
                        android:alpha="0.6"
                        android:src="@drawable/ono_coreo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:alpha="0.7"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="2dip"
                        android:paddingEnd="19dip"
                        android:paddingStart="19dip"
                        android:paddingTop="2dip"
                        android:text="COREOGRAFIA"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:clickable="false"
        android:focusable="true"
        android:background="#1b1b1b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RECYCLE"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="14dip"
            android:layout_marginBottom="15dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>