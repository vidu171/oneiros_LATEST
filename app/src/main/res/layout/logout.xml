<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    android:background="#ef5350"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="140dip"
        android:layout_height="100dip"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:alpha="0.3"
        android:src="@drawable/ic_power"/>
    <TextView android:textSize="24sp"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dip"
        android:layout_marginBottom="24dip"
        android:ellipsize="middle" android:id="@+id/classTitle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:text="Logout " android:maxLines="2" android:alpha="0.75" android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF" />
</FrameLayout>