<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8fdcd2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:alpha="0.3"
        android:src="@drawable/feedback" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Display4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:alpha="0.6"
                android:text="Found a bug? Have a suggestion? Or just want to get in touch with the developer?"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/classTitle"
            style="@style/Base.TextAppearance.AppCompat.Display4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.75"
            android:ellipsize="middle"
            android:maxLines="2"
            android:text="Send us a feedback"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/feedback_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_field_border"
            android:fontFamily="sans-serif-medium"
            android:hint="Name"
            android:inputType="text"
            android:nextFocusDown="@+id/feedback_message"
            android:nextFocusForward="@+id/feedback_message"
            android:padding="14dp"
            android:textColor="#444"
            android:textColorHint="#aaa"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/feedback_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_field_border"
            android:fontFamily="sans-serif-medium"
            android:hint="Contact"
            android:inputType="number"
            android:nextFocusDown="@+id/feedback_message"
            android:nextFocusForward="@+id/feedback_message"
            android:padding="14dp"
            android:textColor="#444"
            android:textColorHint="#aaa"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/feedback_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_field_border"
            android:fontFamily="sans-serif-medium"
            android:hint="Subject"
            android:inputType="text"
            android:nextFocusDown="@+id/feedback_message"
            android:nextFocusForward="@+id/feedback_message"
            android:padding="14dp"
            android:textColor="#444"
            android:textColorHint="#aaa"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/feedback_message"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_field_border"
            android:fontFamily="sans-serif-light"
            android:hint="Message"
            android:inputType="textLongMessage"
            android:lines="4"
            android:padding="14dp"
            android:textColor="#444"
            android:textColorHint="#aaa"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/miscsubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:onClick="submitFeedback"
            android:padding="20dp"
            android:text="SEND"
            android:textColor="#fff"
            app:backgroundTint="#009688" />
    </LinearLayout>
</LinearLayout>
